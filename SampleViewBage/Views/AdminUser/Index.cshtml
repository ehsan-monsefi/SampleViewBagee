
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section>
    <div class="row">
        <div class="col-sm-12">
            <a href="~/Home/Index" class="btn btn-outline-secondary">بازگشت به صفحه اصلی</a>
        </div>
    </div>
</section>
<section>
    <div class="col-sm-12 adus">
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th>نام</th>
                    <th>نام خانوادگی</th>
                    <th>سن</th>
                    <th>ایمیل</th>
                    <th>تاریخ تولد</th>
                    <th>رمز عبور</th>
                    <th>ویرایش کاربر</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.Karbar as List<Domain.Entittes.User>)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Family</td>
                        <td>@item.Age</td>
                        <td>@item.Email</td>
                        <td>@item.DateBourn</td>
                        <td>@item.Password</td>
                        <td>
                            <a href="~/AdminUser/Edit/@item.Id" class="btn btn-primary">ویرایش</a> |
                            <a href="~/AdminUser/Delete/@item.Id" class="btn btn-danger">حذف</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>
<section>
    <div class="row">
        <div class="col-sm-12">
            <h4>برای ایجاد کردن کاربر لطفا ثبت نام کنید</h4>
        </div>
    </div>
</section>
