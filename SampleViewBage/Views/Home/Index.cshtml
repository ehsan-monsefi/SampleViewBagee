@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <div class="row">
        <div class="col-sm-12">
            <partial name="_Menu" />
        </div>
    </div>
</section>
<!--DIV SLIDER*************************************-->
<section>
    <div class="col-sm-12 indsld">
        <div id="myCarousel" class="carousel slide sldlop" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                @{
                    int b = 1;
                    foreach (var item in ViewBag.Prsld as List<Domain.Entittes.ProductSlider>)
                    {
                        if (b == 1)
                        {
                            <div class="item active">
                                <img src="@item.PathPic" style="width:100%; height:400px;">
                                <div class="carousel-caption">
                                    <h3 class="text-danger">@item.HPic</h3>
                                    <p class="text-info">@item.PPic</p>
                                </div>
                            </div>
                            b++;
                        }
                        else
                        {
                            <div class="item">
                                <img src="@item.PathPic" style="width:100%; height:400px;">
                                <div class="carousel-caption">
                                    <h3 class="text-danger">@item.HPic</h3>
                                    <p class="text-info">@item.PPic</p>
                                </div>
                            </div>
                        }
                    }
                }
            </div>
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</section>
